@model ForumProject.ViewModels.Post.CreatePostViewModel

<h1>Create new post</h1>
<h3>on @Model.CommunityTitle</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="20" cols="50"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input asp-for="CommunityId" type="hidden"/>
            <button type="submit" class="btn btn-outline-success">Create</button>
        </form>
    </div>
</div>

